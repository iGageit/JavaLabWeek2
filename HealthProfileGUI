   //behaviors
  public void calculateBMI()
    {
         double HeightFeet = (Double.parseDouble(txtHeightFeet.getText())) * 12 ;
         double FeetInch = HeightFeet + (Double.parseDouble(txtHeightInches.getText()));
     String GetName = txtName.getText();
double BMI = (Double.parseDouble(txtWeight.getText()) * 703) / (FeetInch * FeetInch);
String BMIString = String.valueOf(BMI);

txtBMI.setText((BMIString));
    }
  // caluclate the persons category
  public String calculateCategory()
    {
        double bmi = (Double.parseDouble(txtBMI.getText()));
        
        if( bmi < 18.5 )
            txtCategory.setText( "Underweight");
        else if (bmi < 25 )
            txtCategory.setText("Normal");
        else if( bmi < 30)
            txtCategory.setText("OverWieght");
        else 
            txtCategory.setText("Obese");
       return " 1 ";  
    }
    // heart rate
    public double calculateMaxHR()
    {
        double Maxheartrate = (220 - (Double.parseDouble(txtAge.getText()))); // had to convert all my doubles into strings to be able to output them 
        String HeartrateString = String.valueOf(Maxheartrate);
        txtMaxHeartRate.setText(HeartrateString);
            return 0;  // i was asked for a return 
    }
   
     
   
   








